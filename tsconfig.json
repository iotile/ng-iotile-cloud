{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "files": [
        "node_modules/rxjs/Rx.d.ts",
        "node_modules/zone.js/dist/zone.js.d.ts",
        "public_api.ts"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}
